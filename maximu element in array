#include <stdio.h>

int main() {
    int mat[3][4] = {
        {1, 2, 3, 4},
        {5, 9, 7, 8},
        {10, 6, 11, 12}
    };
    int rows = 3;
    int cols = 4;
    int max_per_row[3]; // Array to store the maximum value of each row
    int i, j, max_val;

    printf("The input matrix is:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("%d\t", mat[i][j]);
        }
        printf("\n");
    }

    // Find the maximum element in each row
    for (i = 0; i < rows; i++) {
        // Initialize max_val with the first element of the current row
        max_val = mat[i][0];
        for (j = 1; j < cols; j++) {
            // Compare each element with the current max_val
            if (mat[i][j] > max_val) {
                max_val = mat[i][j];
            }
        }
        // Store the maximum value for the current row
        max_per_row[i] = max_val;
    }

    // Print the maximum element of each row
    printf("\nMaximum element of each row is:\n");
    for (i = 0; i < rows; i++) {
        printf("Row %d: %d\n", i + 1, max_per_row[i]);
    }

    return 0;
}
